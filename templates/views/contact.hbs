<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <title>Dynamic website in Nodejs | Contact Us</title>
</head>

<body>
    {{>header}}
    <div class="container">
        <div class="pt-4">
            <h5 class="">Contact Us </h5>

            <!-- Wrapper container -->
            <div class="container py-4 ">

                <!-- Bootstrap 5 starter form -->
                <form action="http://localhost:3000/contactpost" enctype="multipart/form-data" method="post">

                    <!-- Name input -->
                    <div class="mb-3">
                        <label class="form-label" for="name">Name</label>
                        <input class="form-control" name="name" value="siddu" type="text" placeholder="Name" />
                    </div>
                    <!-- Email address input -->
                    <div class="mb-3">
                        <label class="form-label" for="emailAddress">Email Address</label>
                        <input class="form-control" name="email" value="siddu@gmail.com" type="email" placeholder="Email Address" />
                    </div>

                    <!-- Message input -->
                    <div class="mb-3">
                        <label class="form-label" for="message">Message</label>
                        <textarea class="form-control" name="message" id="message" type="text" placeholder="Message"
                            style="height: 5rem;">Hi how are you</textarea>
                    </div>

                    <!-- Form submit button -->
                    <div class="d-grid">
                        <input class="btn btn-primary btn-lg" type="submit">
                    </div>

                </form>

            </div>


            <br>
            <br><br>
        </div>
    </div>
    {{!-- {{>footer}} --}}
    <script src="../jq/jquery.js" type="text/javascript"></script>
    <script src="../js/bootstrap.js" type="text/javascript"></script>
</body>

</html>